{
  "name": "@graphite/ylog",
  "version": "0.1.0",
  "description": "A lightweight CLI tool that converts GitHub PR history into context for coding agents",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "ylog": "./dist/cli.js"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "dev": "tsx src/cli.ts",
    "dev:watch": "tsx watch src/cli.ts",
    "build": "tsup",
    "lint": "oxlint src",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "ci": "npm run lint && npm run typecheck && npm run test && npm run build",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "github",
    "pr",
    "history",
    "context",
    "llm",
    "ai",
    "cli"
  ],
  "author": "Greg @ Graphite",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "conf": "^12.0.0",
    "execa": "^8.0.1",
    "node-fetch": "^3.3.2",
    "ora": "^7.0.1",
    "p-limit": "^4.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "husky": "^9.1.7",
    "oxlint": "^0.16.11",
    "prettier": "^3.1.1",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}

{
  "name": "@graphite/ylog",
  "version": "0.1.0",
  "description": "A lightweight CLI tool that converts GitHub PR history into context for coding agents",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "ylog": "./dist/index.cjs"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "dev": "tsx src/cli/index.ts",
    "dev:watch": "tsx watch src/cli/index.ts",
    "build": "tsup",
    "lint": "oxlint src",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "ci": "npm run lint && npm run typecheck && npm run test && npm run build",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "github",
    "pr",
    "history",
    "context",
    "llm",
    "ai",
    "cli"
  ],
  "author": "Greg @ Graphite",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gregorymfoster/ylog.git"
  },
  "homepage": "https://github.com/gregorymfoster/ylog",
  "bugs": {
    "url": "https://github.com/gregorymfoster/ylog/issues"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^0.0.50",
    "@octokit/rest": "^20.0.2",
    "ai": "^3.4.0",
    "better-sqlite3": "^9.2.2",
    "execa": "^8.0.1",
    "ollama-ai-provider": "^0.15.2",
    "p-limit": "^4.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.5",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "husky": "^9.1.7",
    "ora": "^8.2.0",
    "oxlint": "^0.16.11",
    "prettier": "^3.1.1",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "zod": "^3.25.28"
  }
}
